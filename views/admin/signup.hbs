<div class="login">
    <div class="page-content">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--4-col"></div>
            <div class="mdl-cell mdl-cell--4-col">
                <form action="/admin/signup" method="POST">
                    <div class="demo-card-square mdl-card mdl-shadow--2dp">
                        <div class="mdl-card__title mdl-card--expand">
                            <h2 class="mdl-card__title-text">Signup to Admin panel</h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input name="username" class="mdl-textfield__input" type="text" placeholder="Username"
                                       required autofocus> <label class="mdl-textfield__label" for="username">Username...</label>
                            </div>
                            <div class="mdl-textfield mdl-js-textfield">
                                <input name="password" class="mdl-textfield__input" type="password"
                                       placeholder="Password" required/> <label class="mdl-textfield__label"
                                                                                for="password">Password...</label>
                            </div>

                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">

                            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
                               href="/admin/login">Login</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="mdl-cell mdl-cell--4-col"></div>
        </div>
    </div>
</div>