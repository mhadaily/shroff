<a href="/admin/segment/add">Add segment</a>

{{#if segments}}
    {{#each segments as |segment|}}
        <li>{{segment.name}}
            <form method="GET" action='/admin/segment/{{segment._id}}'><input type="submit" value="View"></form>
            <!--<form method="post" action='{{segment._id}}'><input type="submit" value="edit"></form>-->
            <form method="post" action='/admin/segment/{{segment._id}}'><input type="submit" value="delete"></form>
        </li>
    {{/each}}
{{else}}
    No segment
{{/if}}