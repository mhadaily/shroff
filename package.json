{
  "name": "shroff",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Majid Hajian",
  "description": "A real time exchange and stock application using Angular 4, Express, Mongoose and Node.",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "start": "node dist/server/app.js",
    "predev": "tsc -p server",
    "dev": "concurrently \"mongod\" \"ng serve -pc proxy.conf.json --open\" \"tsc -w -p server\" \"nodemon\"",
    "prod": "concurrently \"mongod\" \"ng build -aot -prod && tsc -p server && node dist/server/app.js\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.2.1",
    "@angular/compiler": "^4.2.1",
    "@angular/core": "^4.2.1",
    "@angular/forms": "^4.2.1",
    "@angular/http": "^4.2.1",
    "@angular/platform-browser": "^4.2.1",
    "@angular/platform-browser-dynamic": "^4.2.1",
    "@angular/router": "^4.2.1",
    "@ngtools/webpack": "^1.4.1",
    "body-parser": "^1.17.2",
    "bootstrap": "4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "mongoose": "^4.10.5",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
